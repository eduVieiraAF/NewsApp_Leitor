<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/navy_teal"
    android:padding="@dimen/_6sdp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_13sdp"
        android:layout_margin="@dimen/_6sdp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/nile_night"
        android:elevation="@dimen/_6sdp"
        >

        <TextView
            android:id="@+id/tv_tÃ­tulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:textStyle="bold|italic"
            android:text="@string/titulo"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:layout_gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_13sdp"
        android:padding="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:elevation="@dimen/_6sdp">

        <ScrollView
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_330sdp"
            android:padding="@dimen/_3sdp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_noticia"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_300sdp"
                android:textColor="@color/dark_slate_gray"
                android:text="@string/noticia"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:textAlignment="inherit"
                />
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardBackgroundColor="@color/nile_night"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_18sdp">

            <TextView
                android:id="@+id/tv_autor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/autor"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="@color/white"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>